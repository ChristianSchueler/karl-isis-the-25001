{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": false,
    "noUnusedLocals": false,        // for development so we can leave variables unused
    "noUnusedParameters": false,    // for development so we can leave variables unused
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
